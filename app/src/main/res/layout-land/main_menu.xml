<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/playButton"
        android:layout_width="174dp"
        android:layout_height="125dp"
        android:text="@string/play_button_text"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup_difficulties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:checkedButton="@id/radioButton_easyDifficulty"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_easyDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/difficulty_easy"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="317dp" />

        <RadioButton
            android:id="@+id/radioButton_mediumDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/difficulty_medium"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="317dp" />

        <RadioButton
            android:id="@+id/radioButton_hardDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/difficulty_hard"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="317dp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>